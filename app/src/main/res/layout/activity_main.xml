<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Main_vRoot"
    tools:context="com.asgeirr.businesscard.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.asgeirr.businesscard.BCardView
            android:id="@+id/Main_BCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.asgeirr.businesscard.BCardView
            android:id="@+id/Main_BCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.asgeirr.businesscard.BCardView
            android:id="@+id/Main_BCard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.asgeirr.businesscard.BCardView
            android:id="@+id/Main_BCard4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.asgeirr.businesscard.BCardView
            android:id="@+id/Main_BCard5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Main_btnChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Cambiar"/>

    </LinearLayout>

</ScrollView>